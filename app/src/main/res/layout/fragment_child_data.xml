<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daniel.datownik.ChildDataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <EditText
            android:id="@+id/et_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Wprowadź dzień urodzenia"
            android:inputType="date"
            android:maxEms="2"
            style="@style/Text"/>

        <EditText
            android:id="@+id/et_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Wprowadź miesiąc urodzenia"
            android:inputType="date"
            android:maxEms="2"
            style="@style/Text"/>

        <EditText
            android:id="@+id/et_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Wprowadź rok urodzenia"
            android:inputType="date"
            android:maxEms="4"
            style="@style/Text"/>

        <EditText
            android:id="@+id/et_childName"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Wprowadź imię dziecka"
            android:inputType="text"
            android:maxEms="2" />

    </LinearLayout>

</FrameLayout>

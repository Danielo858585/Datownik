<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Text.Medium">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text.Small">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="Text.Button" parent="Text">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/basicColor</item>
    </style>

    <style name="Text.Button.Big" parent="Text.Button">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Text.Button.Medium" parent="Text.Button">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Text.Button.Small">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Panel">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Panel.TextView">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Panel.TextView.Big">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="Panel.TextView.Medium">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Panel.TextView.Small">
        <item name="android:textSize">14dp</item>
    </style>


</resources>
